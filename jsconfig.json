{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"@components": ["./src/components/"],
			"@components/*": ["./src/components/*"],
			"@scripts": ["./src/scripts/"],
			"@scripts/*": ["./src/scripts/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
